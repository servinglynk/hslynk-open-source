    <repositories>
        <repository>
            <id>cloudera-repo-releases</id>
            <url>https://repository.cloudera.com/artifactory/repo/</url>
        </repository>
    </repositories>

    <build>
        <sourceDirectory>src/main/java</sourceDirectory>
        <resources>
            <resource>
                <directory>src/main/conf</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                        <configuration>
                            <filters>

                                <filter>
                                    <artifact>*:*</artifact>
                                    <excludes>
                                        <exclude>META-INF/*.SF</exclude>
                                        <exclude>META-INF/*.DSA</exclude>
                                        <exclude>META-INF/*.RSA</exclude>
                                    </excludes>
                                </filter>
                            </filters>
                            <transformers>
                                <transformer
                                        implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                                    <mainClass>com.servinglynk.hmis.warehouse.SyncMainAllSchemas</mainClass>
                                </transformer>
                            </transformers>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.3</version>
                <configuration>

                    <programs>
                        <program>
                            <mainClass>com.servinglynk.hmis.warehouse.SyncMainAllSchemas</mainClass>
                            <name>main-sync-schemas.sh</name>
                        </program>
                          <program>
                            <mainClass>com.servinglynk.hmis.warehouse.ActiveListView</mainClass>
                            <name>main-active-list-view.sh</name>
                        </program>
                          <program>
                            <mainClass>com.servinglynk.hmis.warehouse.PurgeProjectGroup</mainClass>
                            <name>main-purge.sh</name>
                        </program>
                            <program>
                            <mainClass>com.servinglynk.hmis.warehouse.ViSpdatView</mainClass>
                            <name>main-vispdat.sh</name>
                        </program>
                    </programs>

                    <useWildcardClassPath>true</useWildcardClassPath>
                    <repositoryLayout>flat</repositoryLayout>
                    <configurationSourceDirectory>${project.build.directory}/../src/main/conf
                    </configurationSourceDirectory>
                    <configurationDirectory>conf</configurationDirectory>
                    <copyConfigurationDirectory>true</copyConfigurationDirectory>
                    <includeConfigurationDirectoryInClasspath>true</includeConfigurationDirectoryInClasspath>
                    <assembleDirectory>${project.build.directory}/temp_build</assembleDirectory>

                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <tasks>
                                <chmod file="${basedir}/target/temp_build/bin/main-sync-schemas.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/target/temp_build/bin/main-sync-schemas.bat"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/start-sync-schemas.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/stop-sync-schemas.sh"
                                       perm="ugo+rx"/>
                               <chmod file="${basedir}/target/temp_build/bin/main-active-list-view.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/start-active-list-view.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/stop-active-list-view.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/target/temp_build/bin/main-purge.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/start-purge.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/stop-purge.sh"
                                       perm="ugo+rx"/>
                               <chmod file="${basedir}/target/temp_build/bin/main-vispdat.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/start-vispdat.sh"
                                       perm="ugo+rx"/>
                                <chmod file="${basedir}/src/main/scripts/stop-vispdat.sh"
                                       perm="ugo+rx"/>
                            </tasks>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <descriptors>
                        <descriptor>${project.build.directory}/../src/main/assembly/archive.xml</descriptor>
                    </descriptors>
                    <appendAssemblyId>false</appendAssemblyId>
                </configuration>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.18</version>
                <configuration>
                    <!-- skip the default execution, we have separate for Ng and for JUnit -->
                    <skip>true</skip>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.5.1</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
